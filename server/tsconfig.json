{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": [
      "./types",            // <-- add this
      "./node_modules/@types"
    ]
  },
  "include": ["./**/*", "./types/**/*"]
}
