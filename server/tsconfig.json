{
  "compilerOptions": {
    // language and module settings
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    // output directory (relative to server/)
    "outDir": "dist",

    // treat server/ as the root of your TS source
    "rootDir": ".",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["**/*"],     // compile all .ts under server/
  "exclude": ["node_modules"]
}
