{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }

  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "src/**/*"  
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
